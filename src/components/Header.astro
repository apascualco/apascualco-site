---
import { Image } from 'astro:assets';
import avatar from '../assets/header/photo-60.webp';
import linkedinICO from '../assets/header/linkedin-50.svg';
import substackICO from '../assets/header/substack-50.svg';
import githubICO from '../assets/header/github-48.svg';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import LanguageToggle from './LanguageToggle.astro';
import { useTranslations } from '../i18n/translations';

export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;

const safeLang: 'es' | 'en' = lang === 'en' ? 'en' : 'es';
const t = useTranslations(safeLang);

const subtitle =
  safeLang === 'es'
    ? 'SSE · Más de 11 años construyendo software escalable'
    : 'SSE · 11+ years building scalable software solutions';
---

<a href="#main-content" class="skip-link">
  {t('skipToContent')}
</a>
<header>
  <div class="header-grid">
    <div>
      <h1><a href="/">{SITE_TITLE}</a></h1>
      <h2>{subtitle}</h2>
    </div>
    <div class="right-stack">
      <Image
        width={60}
        height={60}
        src={avatar}
        alt="Alberto Pascual Corpas"
        class="avatar rounded-full"
      />
      <a href={`/${lang}/about`} class="about-link">{t('aboutAndCV')}</a>
    </div>
  </div>
  <nav>
    <div class="header-social-config">
      <a href="https://www.linkedin.com/in/apascualco/" target="_blank" rel="noopener noreferrer">
        <Image width={33} height={33} src={linkedinICO} alt="Linkedin" class="social-icon" /></a
      >
      <a href="https://apascualco.substack.com" target="_blank" rel="noopener noreferrer">
        <Image width={33} height={33} src={substackICO} alt="Substack" class="social-icon" /></a
      >
      <a href="https://github.com/apascualco/" target="_blank" rel="noopener noreferrer">
        <Image width={33} height={33} src={githubICO} alt="github" class="social-icon" /></a
      >
      <ThemeToggle />
      <LanguageToggle />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  h1 {
    margin: 0;
    font-size: 1.9em;
    padding: 0;
  }
  h1 a,
  h1 a.active {
    text-decoration: none;
  }
  h2 {
    padding: 0;
    margin: 0;
    font-size: 0.8em;
  }
  .avatar {
    background-color: var(--font-color-normal);
    padding: 2px;
    display: inline-block;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0em 0em;
    margin-bottom: 2rem;
  }
  nav a {
    color: var(--font-color-normal);
  }

  .header-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1em;
    padding-bottom: 0.5em;
  }
  .header-grid a {
    color: var(--font-color-normal);
  }
  .right-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
  }
  .about-link {
    font-size: 0.65em;
    color: var(--font-color-normal);
    text-decoration: none;
    padding: 0.2rem 0.7rem;
    border: 1px solid var(--border-color);
    border-radius: 999px;
    background: var(--background-highlight);
    transition: background 0.15s ease;
  }
  .about-link:hover {
    background: var(--background-hover);
  }
  .header-social-config {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-social-config a {
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .skip-link {
    position: absolute;
    top: -100%;
    left: 0;
    background: var(--font-color-highlight);
    color: var(--background);
    padding: 0.5rem 1rem;
    z-index: 100;
    text-decoration: none;
    font-weight: bold;
  }

  .skip-link:focus {
    top: 0;
  }

  @media (max-width: 780px) {
    h1 {
      font-size: 1.6em;
    }
    .avatar {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 560px) {
    h1 {
      font-size: 1.3em;
    }
    h2 {
      font-size: 0.7em;
    }
    .avatar {
      width: 44px;
      height: 44px;
    }
    .header-grid {
      gap: 0.5rem;
    }
    nav {
      margin-bottom: 1rem;
      gap: 0.5rem;
    }
    .header-social-config {
      gap: 0.2rem;
    }
    .social-icon {
      width: 24px;
      height: 24px;
    }
    .about-link {
      font-size: 0.65em;
    }
  }
</style>
