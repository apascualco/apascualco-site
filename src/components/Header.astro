---
import { Image } from "astro:assets";
import avatar from "../assets/header/photo-60.webp";
import linkedinICO from "../assets/header/linkedin-50.svg";
import substackICO from "../assets/header/substack-50.svg";
import githubICO from "../assets/header/github-48.svg";
import { SITE_TITLE } from "../consts";
import Button from "./Button.astro";
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;

const safeLang: "es" | "en" = lang === "en" ? "en" : "es";

const subtitle =
  safeLang === "es"
    ? "SSE · Más de 11 años construyendo software escalable"
    : "SSE · 11+ years building scalable software solutions";
---

<header>
  <div class="header-grid">
    <div>
      <h1><a href="/apascualco-site">{SITE_TITLE}</a></h1>
      <h2>{subtitle}</h2>
    </div>
    <div class="right-stack">
      <Image
        width={60}
        height={60}
        src={avatar}
        alt="Alberto Pascual Corpas"
        class="avatar rounded-full"
      />
    </div>
  </div>
  <nav>
    <Button
      href={`${import.meta.env.BASE_URL}/${lang}/about`}
      class="header-button">About & CV</Button
    >
    <div class="header-social-config">
      <a
        href="https://www.linkedin.com/in/apascualco/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Image
          width={33}
          height={33}
          src={linkedinICO}
          alt="Linkedin"
          class="linkedin-icon"
        /></a
      >
      <a
        href="https://apascualco.substack.com"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Image
          width={33}
          height={33}
          src={substackICO}
          alt="Substack"
          class="substack-icon"
        /></a
      >
      <a
        href="https://github.com/apascualco/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Image
          width={33}
          height={33}
          src={githubICO}
          alt="github"
          class="github-icon"
        /></a
      >
      <ThemeToggle />
      <LanguageToggle />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  h1 {
    margin: 0;
    font-size: 1.9em;
    padding: 0;
  }
  h1 a,
  h1 a.active {
    text-decoration: none;
  }
  h2 {
    padding: 0;
    margin: 0;
    font-size: 0.8em;
  }
  .avatar {
    background-color: var(--font-color-normal);
    padding: 2px;
    display: inline-block;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0em 0em;
    margin-bottom: 2rem;
  }
  nav a {
    color: var(--font-color-normal);
  }

  .header-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1em;
    padding-bottom: 0.5em;
  }
  .header-grid a {
    color: var(--font-color-normal);
  }
  .right-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  :global(.header-button) {
    height: 30px !important;
    line-height: 1 !important;
    padding: 0 1.2rem !important;
    display: inline-flex !important;
  }
  .header-social-config {
    display: flex;
    align-items: center; /* todos al centro vertical */
    gap: 0.5rem;
  }

  .header-social-config a {
    display: flex; /* cada link centra su img */
    align-items: center;
    justify-content: center;
    line-height: 1;
  }
</style>
