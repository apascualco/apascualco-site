---
import { Image } from "astro:assets";
import avatar from "../assets/header/photo-60.webp";
import linkedinICO from "../assets/header/linkedin-50.svg";
import substackICO from "../assets/header/substack-50.svg";
import githubICO from "../assets/header/github-48.svg";
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav class="header-grid">
    <div>
      <h1><a href="/apascualco-site">{SITE_TITLE}</a></h1>
      <h2>SSE Â· 11+ years building scalable software solutions</h2>
    </div>
    <HeaderLink href={`${import.meta.env.BASE_URL}/about`} class="about-cta"
      >About / CV</HeaderLink
    >

    <div class="right-stack">
      <Image
        width={60}
        height={60}
        src={avatar}
        alt="Alberto Pascual Corpas"
        class="avatar rounded-full"
      />
      <div class="subheader-links">
        <a
          href="https://apascualco.substack.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Image
            width={30}
            height={30}
            src={linkedinICO}
            alt="Substack"
            class="substack-icon"
          /></a
        >
        <a
          href="https://www.linkedin.com/in/apascualco/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Image
            width={30}
            height={30}
            src={substackICO}
            alt="Linkedin"
            class="linkedin-icon"
          /></a
        >
        <a
          href="https://github.com/apascualco/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Image
            width={30}
            height={30}
            src={githubICO}
            alt="github"
            class="github-icon"
          /></a
        >
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  h1 {
    margin: 0;
    font-size: 1.9em;
    padding: 0;
  }
  h1 a,
  h1 a.active {
    text-decoration: none;
  }
  h2 {
    padding: 0;
    margin: 0;
    font-size: 0.8em;
  }
  .avatar {
    background-color: var(--font);
    padding: 2px;
    display: inline-block;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1em 0em;
  }
  nav a {
    color: var(--font);
  }
  .right-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  .about-cta {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.9rem;
    border: 1px solid #666666;
    border-radius: 8px;
    font-weight: 600;
    background: #4444440d;
    text-decoration: none;
    transition:
      background 0.15s ease,
      transform 0.1s ease;
  }
  .about-cta:hover {
    background: #4a4a4a;
    transform: translateY(-1px);
  }
</style>
