---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import StructuredData from '../components/StructuredData.astro';
import { useTranslations } from '../i18n/translations';

type Props = CollectionEntry<'blog'>['data'] & { readingTime?: number };

const { title, description, pubDate, updatedDate, heroImage, lang, readingTime } = Astro.props;
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
    <StructuredData
      type="BlogPosting"
      title={title}
      description={description}
      image={heroImage}
      datePublished={pubDate}
      dateModified={updatedDate}
    />
  </head>

  <body>
    <Header lang={lang} />
    <main id="main-content">
      <article>
        <a href={`/${lang}/`} class="back-link">← {lang === 'es' ? 'Volver' : 'Back'}</a>
        <div class="hero-image">
          {
            heroImage && (
              <Image width={1020} height={510} src={heroImage} alt={`Hero image for ${title}`} />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div class="left">
              <p class="description">
                <span class="bullet">&bull;</span>
                <span class="text">{description}</span>
              </p>
            </div>
            <div class="right">
              <div class="date">
                <FormattedDate date={pubDate} />
                {readingTime && <span class="reading-time">· {readingTime} min</span>}
                {
                  updatedDate && (
                    <div class="last-updated-on">
                      {t('lastUpdatedOn')} <FormattedDate date={updatedDate} />
                    </div>
                  )
                }
              </div>
              <h1>{title}</h1>
            </div>
          </div>
          <article class="content">
            <slot />
          </article>
        </div>
      </article>
    </main>
    <Footer />
    <button class="scroll-top" aria-label="Scroll to top">↑</button>
    <script>
      const scrollBtn = document.querySelector('.scroll-top');
      const backLink = document.querySelector('.back-link');

      function toggleScrollBtn() {
        if (!backLink || !scrollBtn) return;
        const backLinkRect = backLink.getBoundingClientRect();
        const isBackLinkVisible = backLinkRect.bottom > 0;
        scrollBtn.classList.toggle('visible', !isBackLinkVisible);
      }

      window.addEventListener('scroll', toggleScrollBtn, { passive: true });
      toggleScrollBtn();

      scrollBtn?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
  </body>
</html>
<style>
  main {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--font-color-normal);
    text-decoration: none;
    font-size: 0.9em;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: var(--font-color-highlight);
  }

  .hero-image {
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    max-width: 100%;
    height: auto;
  }
  .prose {
    width: 100%;
    color: rgb(var(--gray-dark));
  }

  .prose p img,
  :global(.content img) {
    max-width: 100%;
    height: auto;
    margin: 1rem auto;
  }

  .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .title .left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .title h1 {
    margin: 0.2rem 0 0 0;
    font-size: 1.5rem;
    color: var(--font-color-highlight);
  }

  .title .right {
    text-align: right;
  }

  .reading-time {
    color: var(--font-color-normal);
    opacity: 0.8;
  }

  .title .description {
    margin: 0;
    font-size: 1rem;
    color: var(--font-color-normal);
  }
  .description {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .description .bullet {
    font-size: 3em;
    line-height: 1;
  }

  .description .text {
    flex: 1 1 auto;
    min-width: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  :global(.content a) {
    color: var(--font-color-highlight);
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    transition:
      color 0.2s,
      border-bottom-color 0.2s;
  }

  :global(.content a:hover) {
    color: var(--font-color-accent);
    border-bottom-color: currentColor;
  }
  :global(.content h1) {
    font-size: clamp(1.8rem, 1rem + 2vw, 2.4rem);
    line-height: 1.25;
    letter-spacing: -0.005em;
    margin: 1.6rem 0 0.8rem;
    color: var(--font-color-highlight);
  }

  :global(.content h2) {
    font-size: clamp(1.4rem, 0.95rem + 1.4vw, 1.7rem);
    line-height: 1.28;
    margin: 1.4rem 0 0.6rem;
    color: var(--font-color-highlight);
  }

  :global(.content h3) {
    font-size: clamp(1.15rem, 0.9rem + 0.8vw, 1.35rem);
    line-height: 1.3;
    margin: 1rem 0 0.5rem;
    color: var(--font-color-normal);
  }
  :global(.content h1[id]),
  :global(.content h2[id]),
  :global(.content h3[id]) {
    scroll-margin-top: 96px;
  }
  :global(.content pre.astro-code) {
    padding: 1rem 1.25rem;
    margin: 1.25rem 0;
    border-radius: 10px;
    overflow: auto;
    line-height: 1.55;
  }

  :global(.content pre.astro-code > code) {
    display: block;
    padding: 0;
    background: transparent;
  }

  :global(.content :not(pre) > code) {
    padding: 0.15rem 0.35rem;
    border-radius: 6px;
    background: rgba(127, 127, 127, 0.12);
  }

  @media (max-width: 780px) {
    .hero-image img {
      border-radius: 8px;
    }
    .title h1 {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 560px) {
    .title {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
    .title .right {
      text-align: left;
      width: 100%;
    }
    .title h1 {
      font-size: 1.2rem;
    }
    .description .bullet {
      font-size: 2em;
    }
    .description .text {
      white-space: normal;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      -webkit-box-orient: vertical;
    }
    .hero-image img {
      border-radius: 6px;
    }
  }

  .scroll-top {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--border-color);
    background: var(--background-highlight);
    color: var(--font-color-normal);
    font-size: 1.2rem;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease,
      visibility 0.2s ease,
      background 0.15s ease;
  }

  .scroll-top.visible {
    opacity: 1;
    visibility: visible;
  }

  .scroll-top:hover {
    background: var(--background-hover);
    color: var(--font-color-highlight);
  }
</style>
