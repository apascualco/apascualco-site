---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{SITE_TITLE}</title>
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta
      http-equiv="refresh"
      content={`0; url=${import.meta.env.BASE_URL}/es/`}
    />
  </head>
  <body>
    <p>Redirecting to <a href=`${import.meta.env.BASE_URL}/es`>/es/</a>...</p>
  </body>
</html>
